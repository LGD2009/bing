<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <TextView
        android:id="@+id/item_relevant_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/item_relevant_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/item_relevant_index"
        app:layout_constraintBottom_toBottomOf="@+id/item_relevant_index"
        app:layout_constraintLeft_toRightOf="@+id/item_relevant_index"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/item_relevant_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/item_relevant_line"
        app:layout_constraintLeft_toRightOf="@+id/item_relevant_line"
        app:layout_constraintBottom_toBottomOf="@+id/item_relevant_line"
        tools:text="@string/relevant_title"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/item_relevant_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_relevant_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_relevant_title"
        tools:text="@string/relevant_content"
        android:letterSpacing="0.11"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@android:color/black"/>


</android.support.constraint.ConstraintLayout>