<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_wallpaper_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_wallpaper_constraint_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_wallpaper_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            tools:src="@drawable/tools_card_image"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_wallpaper_story"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_wallpaper_line"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_wallpaper_image">

            <TextView
                android:id="@+id/item_wallpaper_story_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="精灵的神秘世界"/>

            <ImageView
                android:id="@+id/item_wallpaper_story_switch"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/card_expend"
                android:scaleType="centerCrop"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_wallpaper_story_title"/>

            <TextView
                android:id="@+id/item_wallpaper_story_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/item_wallpaper_story_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_wallpaper_story_title"
                tools:text="意大利，佩尔吉内瓦尔苏加纳"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/item_wallpaper_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/item_wallpaper_image"/>

        <ImageView
            android:id="@+id/item_wallpaper_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/collection_not"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_wallpaper_line"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/collection"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="12dp"
            app:layout_constraintLeft_toRightOf="@+id/item_wallpaper_collection"
            app:layout_constraintTop_toTopOf="@+id/item_wallpaper_collection"
            app:layout_constraintBottom_toBottomOf="@+id/item_wallpaper_collection"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

